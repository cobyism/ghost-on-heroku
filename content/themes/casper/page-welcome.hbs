{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}
<header class="site-header outer {{#if @blog.cover_image}}" style="background-image: url({{imgix_url @blog.cover_image}}){{else}}no-cover{{/if}}">
    <div class="inner">
        <div class="site-header-content">
            <h1 class="site-title">
                {{#if @blog.logo}}
                    <img class="site-logo" src="{{@blog.logo}}" alt="{{@blog.title}}" />
                {{else}}
                    {{@blog.title}}
                {{/if}}
            </h1>
            <h2 class="site-description">{{@blog.description}}</h2>
        </div>
    </div>
</header>

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

<main id="site-main" class="site-main outer" style="background-color: black;">
    <div class="inner">
      <div style="display: flex; flex-direction: column; align-items: center; color: white;">
        <h2>
          Welcome to the Labs Content Platform.
        </h2>
        <span>
          Please login to continue.
        </span>

        <a href="auth/id"><button class="login-button">Login</button></a>
      </div>
    </div>
</main>

{{/post}}
